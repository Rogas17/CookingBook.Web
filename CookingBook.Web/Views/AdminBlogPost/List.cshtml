@model List<CookingBook.Web.Models.Domena.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Posts</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Header</td>
                    <td>Tags</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Nagłówek</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tagi)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Nazwa</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="AdminBlogPost"
                               asp-action="Edit"
                               asp-route-id="@blogPost.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There's no posts</p>
    }

</div>